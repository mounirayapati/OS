#include <stdio.h>
#include <fcntl.h>
#include <unistd.h>
#include <sys/stat.h>
#include <dirent.h>

int main() {
    struct stat st;
    DIR *d;
    struct dirent *dir;

    stat("test.txt", &st);
    printf("File size: %ld\n", st.st_size);

    d = opendir(".");
    if (d) {
        while ((dir = readdir(d)) != NULL)
            printf("%s\n", dir->d_name);
        closedir(d);
    }
    return 0;
}
