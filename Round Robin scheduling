#include <stdio.h>

int main() {
    int n, i, tq, time = 0, remain;
    int bt[10], rt[10];

    printf("Enter number of processes: ");
    scanf("%d", &n);

    remain = n;

    for (i = 0; i < n; i++) {
        printf("Enter burst time for process %d: ", i + 1);
        scanf("%d", &bt[i]);
        rt[i] = bt[i];
    }

    printf("Enter time quantum: ");
    scanf("%d", &tq);

    printf("\nProcess\tTurnaround Time\n");

    for (time = 0, i = 0; remain != 0;) {
        if (rt[i] <= tq && rt[i] > 0) {
            time += rt[i];
            rt[i] = 0;
            remain--;
            printf("P%d\t%d\n", i + 1, time);
        }
        else if (rt[i] > 0) {
            rt[i] -= tq;
            time += tq;
        }

        if (i == n - 1)
            i = 0;
        else
            i++;
    }

    return 0;
}
