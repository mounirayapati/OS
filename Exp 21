#include <stdio.h>
#include <fcntl.h>
#include <unistd.h>

int main() {
    int fd;
    char buffer[50];

    fd = open("test.txt", O_CREAT | O_RDWR, 0644);
    write(fd, "Hello UNIX", 10);

    lseek(fd, 0, SEEK_SET);
    read(fd, buffer, 10);
    buffer[10] = '\0';

    printf("File content: %s\n", buffer);
    close(fd);

    return 0;
}
