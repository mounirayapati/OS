#include <stdio.h>
#include <pthread.h>

void* printMessage(void* arg) {
    printf("Hello from thread!\n");
    return NULL;
}

int main() {
    pthread_t t1;

    pthread_create(&t1, NULL, printMessage, NULL);
    pthread_join(t1, NULL);

    printf("Thread execution completed.\n");
    return 0;
}
